<% title(@destination.city, "Destinations") %>

<h2><%= @destination.city %></h2>

<p>
  <%= link_to "Edit Destination", edit_destination_path(@destination) %>
  <%= link_to "Delete Destination", destination_path(@destination), :method => :delete, :confirm => "Are you sure you want to delete this destination?" %>
  <%= link_to "New Itinerary", new_destination_itinerary_path(@destination) %>
</p>

<ul id='destinations'>
  <% @destination.itineraries.each do |itinerary| %>
    <li>
      #<%= itinerary.id %> - <%= link_to itinerary.activity, [@destination, itinerary] %>
    </li>
  <% end %>
</ul>
